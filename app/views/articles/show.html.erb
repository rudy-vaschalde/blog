<h1><%= @article.title %> <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-warning" %></h1>

<p>
  <%= @article.text %>
</p>
<div class="col-md-4">
  <h4>Comments</h4>
  <%== render @article.comments %>
</div>
<div class="col-md-4">
  <h4>Add a comment:</h4>
  <%= bootstrap_form_for([@article, @article.comments.build]) do |f| %>
  <%= f.text_field :commenter %>
  <%= f.text_area :body %>

  <%= f.submit %>
  <% end %>
</div>
